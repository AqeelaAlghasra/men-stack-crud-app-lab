<!-- views/fruits/show.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <title><%= blog.title %></title> <!-- Dynamic title based on blog name -->
  </head>
  <body>
    <div >   
      
      <div class="blog-actions">
      <form class="delete-form" action="/<%=blog._id%>?_method=DELETE" method="POST">
          <button class="delet-button" type="submit">Delete <%= blog.title %></button>
        </form>
        <a  href="/<%= blog._id %>/edit">Edit <%= blog.title %></a>
      </div>
      <div class="blogContent">
        <h1><%= blog.title %></h1>
        <h3><%= blog.description %></h3>
        <p><%= blog.body %></p>
      </div>






      <a href="/"><div class="index-link-text">Back to Blogs</div></a>
    </div>
  </body>
</html>
